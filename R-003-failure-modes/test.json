{
  "test_id": "R-003-failure-modes",
  "protocol_version": "1.0",
  "category": "resolver",
  "description": "Tests that resolver failure modes and steps are recognized by the parser.",
  "spec_ref": [
    "ยง4.4 Resolver Failure Modes",
    "ยง3.3 Step Parsing",
    "ยง2.3 Symbol Normalization"
  ],
  "fixtures": {
    "inputs": [
      {
        "workflow": "R-003-failure-modes/workflow.ol",
        "values": {
          "userInput": "someInput"
        }
      }
    ]
  },
  "assertions": [
    {
      "id": "allowed_resolvers_listed",
      "type": "output_equals",
      "path": "allowedResolvers",
      "expected": ["ReliableResolver", "UnstableResolver"],
      "severity": "fatal",
      "description": "Parser should capture all allowed resolvers listed in the workflow"
    },
    {
      "id": "ask_step_1_saveas",
      "type": "output_equals",
      "path": "steps[0].saveAs",
      "expected": "reliableResult",
      "severity": "fatal",
      "description": "Step 1 saveAs must be correctly normalized"
    },
    {
      "id": "ask_step_2_saveas",
      "type": "output_equals",
      "path": "steps[1].saveAs",
      "expected": "unstableResult",
      "severity": "fatal",
      "description": "Step 2 saveAs must be correctly normalized"
    },
    {
      "id": "workflow_name_present",
      "type": "output_equals",
      "path": "name",
      "expected": "TestResolverFailureModes",
      "severity": "fatal",
      "description": "Workflow name should be parsed correctly"
    },
    {
      "id": "workflow_return_values",
      "type": "output_equals",
      "path": "returnValues",
      "expected": ["reliableResult", "unstableResult"],
      "severity": "fatal",
      "description": "Return statement must list all resolver outputs"
    },
    {
      "id": "no_parse_warnings",
      "type": "status_equals",
      "path": "__warnings.length",
      "expected": 0,
      "severity": "warning",
      "description": "Parser should not generate warnings for valid failure mode workflow"
    }
  ]
}
